@model MyApp.Models.UtilityViewModel

@{
    ViewData["Title"] = "Utility Tools";
}

<h1>Utility Tools</h1>

@if (Model != null && !string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}


<div class="row">
    <!-- Count Vowels -->
    <div class="col-md-4">
        <h3>Count Vowels</h3>

        <!-- Plain HTML form: posts to /Utility/CountVowels -->
        <form action="/Utility/CountVowels" method="post">
            <div class="mb-3">
                <label class="form-label" for="InputString">Input String</label>

                <!-- Plain input; name MUST match the property on UtilityViewModel -->
                <input type="text"
                       id="InputString"
                       name="InputString"
                       class="form-control"
                       value="@Model?.InputString" />
            </div>

            <button type="submit" class="btn btn-primary">Count</button>

            @if (Model != null &&
            Model.VowelCountResult.HasValue &&
            Model.LastOperation == "CountVowels")
            {
                <p class="mt-3">
                    Vowel Count: <strong>@Model.VowelCountResult</strong>
                </p>
            }
        </form>
    </div>


    <div class="col-md-4">
        <h3>Leap Year Checker</h3>
        <!-- Plain HTML form: posts to /Utility/CheckLeapYear -->
        <form action="/Utility/CheckLeapYear" method="post">
            <div class="mb-3">
                <label class="form-label" for="Year">Year</label>
                <!-- name must match UtilityViewModel.Year -->
                <input type="number"
                       id="Year"
                       name="Year"
                       class="form-control"
                       value="@(Model?.Year?.ToString() ?? "")" />
            </div>
            <button type="submit" class="btn btn-primary">Check</button>

            @* Leap Year result *@
            @if (Model?.IsLeapYearResult.HasValue == true &&
            Model.LastOperation == "CheckLeapYear")
            {
                <p class="mt-3">
                    Result:
                    <strong>
                        @(Model.IsLeapYearResult.Value ? "Leap Year" : "Not a Leap Year")
                    </strong>
                </p>
            }
        </form>
    </div>

    <!-- Palindrome -->
    <div class="col-md-4">
        <h3>Palindrome Checker</h3>
        <!-- Plain HTML form: posts to /Utility/CheckPalindrome -->
        <form action="/Utility/CheckPalindrome" method="post">
            <div class="mb-3">
                <label class="form-label" for="Number">Number</label>
                <!-- name must match UtilityViewModel.Number -->
                <input type="number"
                       id="Number"
                       name="Number"
                       class="form-control"
                       value="@(Model?.Number?.ToString() ?? "")" />
            </div>
            <button type="submit" class="btn btn-primary">Check</button>

            @* Palindrome result *@
            @if (Model?.IsPalindromeResult.HasValue == true &&
            Model.LastOperation == "CheckPalindrome")
            {
                <p class="mt-3">
                    Result:
                    <strong>
                        @(Model.IsPalindromeResult.Value ? "Palindrome" : "Not a Palindrome")
                    </strong>
                </p>
            }
        </form>
    </div>